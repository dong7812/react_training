model User{
  id String @id
  password String
  nickname String
  number String
  mail String
}

model Article {
  id        Int      @id @default(autoincrement())
  author    String
  title     String
  content   String?
  imageUrl  String
  viewCount Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("articles")
}
